#include <stdio.h>
#include <string.h>
int main()
{
    int i;
    char str[100];
    char ch='_';
    
    printf("Enter your sentence : ");
    scanf("%[^\n]",str);
    
    for(i=0; i<strlen(str); i++)
    {
        if(str[i]==' ')
        {
            str[i]=ch;
        }
    }
    printf("%s",str);

    return 0;
}
